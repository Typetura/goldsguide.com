{{{html}}}

    <div class="gh-post-upgrade-cta-content"></div>
    <div class="sign-in"><small>Already have an account? <a data-portal="signin">Sign in</a></small></div>

        {{#has visibility="paid"}}
           
<div class="shoutout" style="margin-left:auto; margin-right:auto;">
    <h2 class="primary-headline"><strong>Subscribe to unlock</strong></h2>
        
        {{/has}}

        {{#has visibility="members"}}

            <h2 class="primary-headline">Sign up for free to keep reading.</h2>
            <p class="get-ahead">Just enter your email below.</p>
        
        {{/has}}

        {{#has visibility="tiers"}}

            <h2 class="primary-headline">Subscribe to {{tiers}} for access.</h2>
        
        {{/has}}

        {{#if @member}}

            <a class="bullion-button" data-portal="account/plans" style="color:{{accentColor}}">Upgrade</a>
        
        {{else}}

        <a class="bullion-button" data-portal="signup/monthly">Subscribe</a>
        

<br>

        {{/if}}
</div>